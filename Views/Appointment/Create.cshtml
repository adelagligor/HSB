@model HairStyleBookingApp.Models.AppointmentModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1></h1>

<h4>Make An Appointment</h4>
<hr />
